<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register Course Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="../static/register.css" rel="stylesheet">
</head> 
<body>

<!-- Navbar Section -->
    <!-- Changes start -->
    <nav class="navbar navbar-expand-sm bg-dark fixed-top text-light">

        <div class="container-fluid">
          <!-- Links -->
          <div class="row w-100">
            <div class="col text-center">
                <a class="nav-link" href="./home">Home</a>
            </div>
            <div class="col text-center">
                <a class="nav-link" href="./register">Register</a>
            </div>
            <div class="col text-center">
                <a class="nav-link" href="./registercourse">Register Course</a>
            </div>
            <div class="col text-center">
                <a class="nav-link" href="./login">Login</a>
            </div>
            <div class="col text-center">
                <a class="nav-link" href="./givefeedback">Give Feedback</a>
            </div>
            <div class="col text-center">
                <a class="nav-link" href="./viewfeedback">View Feedback</a>
            </div>
            <div class="col text-center">
                <a class="nav-link" href="#" id="roleNavItem">
                    <i class="bi bi-person"></i> Role: 
                </a>
            </div>
        </div>
        </div>
      
    </nav>
    
    <div class="container d-flex align-items-center justify-content-center" style="height: 100vh;">
        <div class="card shadow rounded">
            <div class="card-body">
                <h1 class="card-title text-center custom-color mb-4 ">Register Course</h1>
                <form id="registerForm" action="/registercourse" method="post">

                    <!-- Form fields here -->
                    
                    <div class="mb-3 ">
                        <label for="Course" class="form-label" >Course:</label>
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="courseDropdownButton" data-bs-toggle="dropdown" aria-expanded="false">
                                Select One
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="courseDropdownButton">
                                <li><a class="dropdown-item" href="#" data-value="OOD">OOD</a></li>
                                <li><a class="dropdown-item" href="#" data-value="DAA">DAA</a></li>
                                <li><a class="dropdown-item" href="#" data-value="DBMS">DBMS</a></li>
                            </ul>
                            <input type="hidden" id="selectedCourse" name="selectedCourse" required>
                            <div class="invalid-feedback">Please select a Course.</div>
                        </div>
                    </div>
                    
                    <div class="mb-3 ">
                        <label for="Semester" class="form-label" >Semester:</label>
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="semesterDropdownButton" data-bs-toggle="dropdown" aria-expanded="false">
                                Select One
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="semesterDropdownButton">
                                <li><a class="dropdown-item" data-value="Spring 2024">Spring 2024</a></li>
                                <li><a class="dropdown-item" data-value="Fall 2024">Fall 2024</a></li>
                                <li><a class="dropdown-item" data-value="Spring 2025">Spring 2025</a></li>
                            </ul>
                            <input type="hidden" id="selectedSemester" name="selectedSemester" required>
                            <div class="invalid-feedback">Please select a Semester.</div>
                        </div>
                    </div>
                    
                    <button id="submitButton" type="submit" class="btn btn-primary w-100">Submit</button>

                </form>
            </div>
        </div>
    </div>
 

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    
   
        
        
<script>
$(document).ready(function() {
    $(".dropdown-item").click(function(e) {
        e.preventDefault();  // Prevent the default anchor click behavior
        var selectedValue = $(this).attr("data-value");  // Get the data-value attribute of the clicked item
        var targetInput = $(this).closest('.dropdown').find('input[type="hidden"]');  // Find the hidden input related to this dropdown
        targetInput.val(selectedValue);  // Set the value of the hidden input

        var button = $(this).closest('.dropdown').find('.dropdown-toggle');  // Find the dropdown button
        button.text($(this).text());  // Change the button text to the selected item's text
    });
});
</script>

</body>
</html>